@model IEnumerable<unipaulistana.model.Cliente>  

<br/>

@Html.Partial("_ErrorSummary")

<br/>
<br/>
<br/>

<div class="top-buffer"></div>  
<div class="panel panel-primary">  
    <div class="panel-heading panel-head">Lista de clientes</div>  
    <div class="panel-body">  
        <div class="btn-group">  
            <a id="createEditCustomerModal" asp-action="Criar" class="btn btn-primary">  
                <i class="glyphicon glyphicon-plus"></i>  Adicionar
            </a>  
        </div>  
        <br/>
        <br/>
        
        <div class="top-buffer"></div>  
        <table class="table table-bordered table-striped table-condensed">  
            <thead>  
                <tr>
                    <th>ID</th>  
                    <th>Nome</th>                      
                    <th></th>  
                </tr>  
            </thead>  
            <tbody>  
                @foreach (var item in Model)  
                {  
                    <tr>  
                        <td>@Html.DisplayFor(modelItem => item.ClienteID)</td>  
                        <td>@Html.DisplayFor(modelItem => item.Nome)</td>  
                        <td>  
                            <a id="editCustomerModal" asp-action="Alterar" asp-route-id= "@item.ClienteID" class="btn btn-info">  
                                <i class="glyphicon glyphicon-pencil"></i>  Alterar  
                            </a>  
                            <a id="deleteCustomerModal" asp-action="Excluir" asp-route-id= "@item.ClienteID" class="btn btn-danger">  
                                <i class="glyphicon glyphicon-trash"></i>  Excluir  
                            </a>  
                        </td>  
                    </tr>  
                }  
            </tbody>  
        </table>  
    </div>  
</div>  
  