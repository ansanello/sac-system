@model IEnumerable<unipaulistana.model.Solicitacao>  
@using unipaulistana.web.extensions

<br/>

@Html.Partial("_ErrorSummary")

<div class="top-buffer"></div>  
<div class="panel panel-primary">  
    <h3>Lista de solicitações</h3>
    <div class="panel-body">  
        @if(User.HasPermission("PermiteCriarSolicitacao")){
            <div class="btn-group">  
                <a id="createEditCustomerModal" asp-action="Criar" class="btn btn-primary">  
                    <i class="glyphicon glyphicon-plus"></i>  Adicionar
                </a>  
            </div>  
        }
        <br/>
        <br/>
        

        <div class="module">
					
        <div class="module-body table"> 
        <table  cellpadding="0" cellspacing="0" border="0" class="datatable-1 table table-bordered table-striped display" width="100%">  
            <thead>  
                <tr>
                    <th>Data</th> 
                    <th>Cliente</th>   
                    <th>Usuário</th>                      
                    <th>Departamento</th>   
                    <th>Status</th>        
                    <th>Descrição</th>                      
                    <th></th>  
                </tr>  
            </thead>  
            <tbody>  
                @foreach (var item in Model)  
                {  
                    <tr >  
                        <td>@Html.DisplayFor(modelItem => item.DataDeCriacao)</td>  
                        <td>@Html.DisplayFor(modelItem => item.NomeCliente)</td>  
                        <td>@Html.DisplayFor(modelItem => item.NomeUsuario)</td>  
                        <td>@Html.DisplayFor(modelItem => item.NomeDepartamento)</td>  
                        
                        @if((int)item.Status == 1)
                        {
                            <td><span style="color:red">@Html.DisplayFor(modelItem => item.Status)</span></td>  
                        }
                        else if((int)item.Status == 2)
                        {
                            <td><span style="color:blue">@Html.DisplayFor(modelItem => item.Status)</span></td>  
                        } 
                        else if((int)item.Status == 3)
                        {
                            <td><span style="color:orange">@Html.DisplayFor(modelItem => item.Status)</span></td>  
                        } 
                        else if((int)item.Status == 4)
                        {
                            <td><span style="color:green">@Html.DisplayFor(modelItem => item.Status)</span></td>  
                        } 
                        else
                        {
                            <td><span style="color:blue">@Html.DisplayFor(modelItem => item.Status)</span></td>  
                        }
                        
                        <td>@Html.DisplayFor(modelItem => item.Descricao)</td>  
                        <td>  
                            @if(User.HasPermission("PermiteAlterarSolicitacao")){
                                <a id="editarUsuario" asp-action="Alterar" asp-route-id= "@item.SolicitacaoID" class="btn btn-info">  
                                    <i class="glyphicon glyphicon-pencil"></i>  Alterar  
                                </a>
                            }

                            @if(User.HasPermission("PermiteAlterarSolicitacao")){
                                <a id="AlterarSenhaUsuario" asp-action="AlterarSenhaViaAdmin" asp-route-id= "@item.SolicitacaoID" class="btn btn-warning">  
                                    <i class="glyphicon glyphicon-pencil"></i>  Alterar senha 
                                </a>  
                            }
                        </td>  
                    </tr>  
                }  
            </tbody>  
        </table>  
        </div> 
        </div>
    </div>  
</div>  
  
<script src="@Url.Content("~/js/datatables/jquery.dataTables.js")"></script>
	<script>
		$(document).ready(function() {
			$('.datatable-1').dataTable();
			$('.dataTables_paginate').addClass("btn-group datatable-pagination");
			$('.dataTables_paginate > a').wrapInner('<span />');
			$('.dataTables_paginate > a:first-child').append('<i class="icon-chevron-left shaded"></i>');
			$('.dataTables_paginate > a:last-child').append('<i class="icon-chevron-right shaded"></i>');
		} );
	</script>